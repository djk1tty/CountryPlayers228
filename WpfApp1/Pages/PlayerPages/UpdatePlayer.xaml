<Page x:Class="WpfApp1.Pages.PlayerPages.UpdatePlayer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.Pages.PlayerPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UpdatePlayer">

    <Grid Background="White">
        <ComboBox x:Name ="PlayerLoginComboBox" HorizontalAlignment="Center" Height="36" Margin="0,326,0,0" VerticalAlignment="Top" Width="298" SelectionChanged="PlayerLoginComboBox_SelectionChanged"/>
        <TextBox x:Name="TextBoxPassword" HorizontalAlignment="Left" Height="30" Margin="40,46,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="140"/>
        <TextBox x:Name="TextBoxName" HorizontalAlignment="Left" Height="30" Margin="40,100,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="140"/>
        <TextBox x:Name="TextBoxAge" HorizontalAlignment="Left" Height="30" Margin="40,158,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="140"/>
        <ComboBox x:Name="ComboBoxPlayerCountry" HorizontalAlignment="Left" Height="30" Margin="40,0,0,0" VerticalAlignment="Center" Width="139"/>
        <Button Content="Обновить" HorizontalAlignment="Left" Margin="251,0,0,0" Click ="ButtonUpdate" VerticalAlignment="Center" Width="126" Height="30"/>

    </Grid>
</Page>
