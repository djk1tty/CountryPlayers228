<Page x:Class="WpfApp1.Pages.CountryPages.Countries"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.Pages.CountryPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Countries">

    <Grid Background="White">
        <DataGrid Name="GridCountryInfromation" ColumnWidth="*" AutoGenerateColumns="False" IsReadOnly="True" Margin="10,0,10,60">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Номер" Binding="{Binding Id}"></DataGridTextColumn>
                <DataGridTextColumn Header="Имя" Binding="{Binding CountryName}"></DataGridTextColumn>
                <DataGridTextColumn Header="Количество игроков" Binding="{Binding PlayerCount}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Добавить страну" HorizontalAlignment="Left" Margin="52,417,0,0" VerticalAlignment="Top" Height="23" Width="105" Click="ButtonAddCountries" RenderTransformOrigin="0.5,0.5">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.036"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button Content="Удалить страну" HorizontalAlignment="Left" Margin="193,417,0,10" Width="97" Click="ButtonDeleteCountries"/>
        <Button Content="Назад" HorizontalAlignment="Left" Margin="666,417,0,10" Width="92" Click="ButtonGoBack"/>
    </Grid>
</Page>
